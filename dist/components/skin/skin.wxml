
<view class="skin flex flex-top">
  <view class="skin-title">皮肤 :</view>
  <view class="flex-full flex skin-color flex-wrap">
    <view class="skin-item flex {{current == index ? 'selected' : ''}}" wx:for="{{skins}}" wx:key="index" wx:for-item="item" data-index="{{index}}" bindtap="handleSelect">
      <view class="color-item main" style="background: {{item.main}};"></view>
      <view class="color-item sub" style="background: {{item.sub}};"></view>
    </view>
  </view>
</view>