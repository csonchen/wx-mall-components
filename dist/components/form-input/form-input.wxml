
<view class="form-input flex-center-between classname" bindtap="handleClick">
  <view class="cell-left">{{title}}</view>
  <view class="flex-full cell-right flex flex-middle flex-right">
    <!-- 输入框-->
    <input class="input-val" wx:if="{{input}}" placeholder="{{placeholder}}" placeholder-class="input-place"/>
    <!-- 文本-->
    <text class="cell-foot">{{foot}}</text>
    <!-- 箭头-->
    <image class="link-icon" wx:if="{{link}}" src="/images/icon_extended_gray.png"></image>
    <!-- 复选框-->
    <view class="checkbox {{checked ? 'checkbox-checked' : ''}}" wx:if="{{checkbox}}"> 
      <image class="check-icon" hidden="{{!checked}}" src="/images/icon_checkbox_selected.png"></image>
    </view>
  </view>
</view>