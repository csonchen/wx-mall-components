
<view class="page">
  <view class="page__hd">
    <view class="page__title">form-input</view>
    <view class="page__desc">表单输入框</view>
  </view>
  <view class="page__bd page__bd_spacing"> 
    <form-input title="我是普通文本" foot="看看我" topHalfRadius="topHalfRadius"></form-input>
    <form-input title="我是链接" foot="点我吧" link="https://www.baidu.com"></form-input>
    <form-input title="我是文本输入框" placeholder="点我输入内容吧" input="input" bottomHalfRadius="bottomHalfRadius"></form-input>
    <view class="mt15">
      <form-input title="我是复选框" checkbox="checkbox"></form-input>
    </view>
    <view class="mt15">
      <form-input classname="input-cell" title="我是复选框2" checkbox="checkbox" checked="checked"></form-input>
    </view>
    <view class="mt15"> 
      <form-input classname="input-cell" title="我是排序框" sort="down"> </form-input>
      <form-input classname="input-cell mt10" title="我是排序框" sort="all"></form-input>
      <form-input classname="input-cell mt10" title="我是排序框" sort="up"></form-input>
    </view>
    <view class="mt15">
      <wxParse nodes="{{doc}}" language="html"></wxParse>
    </view>
  </view>
</view>