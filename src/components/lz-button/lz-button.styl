.lz-btn-orange.lz-btn-ghost 
  background transparent !important
  color #FEA54C


.lz-btn-gray.lz-btn-ghost 
  background transparent !important
  color #323232


.lz-btn-redGray.lz-btn-ghost 
  background transparent !important
  color #FE473C


.lz-btn-disabled 
  color #fff
  background #cccccc
  border-color #cccccc


.lz-btn-min-width 
  min-width 55px


.lz-btn-no-border 
  border 0px solid transparent
