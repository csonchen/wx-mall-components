@import '../../styles/flex.styl';

.form-input
  background #ffffff
  padding 10px 12px
  font-size 14px

.cell-left
  margin-right 10px

.cell-right

.input-val
  text-align right
  width 100%

.input-place
  text-align right
  color #dadada

.link-icon 
  width 14px
  height 14px
  margin-left 3px  

.cell-foot
  color #999  

.checkbox
  border 2px solid #cccccc
  border-radius 100%  
  width 16px
  height 16px
  &.checkbox-checked
    border none
    background #0188FF
    width 20px
    height 20px
    text-align center
    line-height 20px
  .check-icon
    width 20px
    height 20px  