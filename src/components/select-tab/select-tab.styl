@import '../../styles/flex.styl';
@import '../../styles/normal.styl';
@import '../../styles/plugin.styl';
@import '../../styles/define.styl';

.select-tab
  position relative

.component-container
  background #fff
  z-index 2
  height 40px
  box-sizing border-box
  position relative

.select 
  min-width 85px
  padding 10px 8px
  box-sizing border-box
  text-align center

.tab-item
  padding 10px 0
  text-align center

.check-icon
  width 20px
  height 20px
  background font-blue
  border-radius 50%

.option-item
  padding 12px 12px
  background #ffffff
  color #999

.option-item__select,
.tab-item__select,
.panel-select
  color font-blue  

.select-panel
  font-size 14px
  position relative
  z-index 1
  max-height 0
  overflow hidden
  transition max-height 0.2s ease-out

.options-panel__show
  max-height 400px
  border-top 1rpx solid #f2f2f2
  transition max-height 0.25s ease-in    

.mask
  position absolute
  top 0
  left 0
  right 0 
  bottom 0
  background rgba(0, 0, 0, .3)
  transition all .3s ease-in-out
  opacity 0
  height 100vh
  visibility hidden    

.mask-show
  opacity 1
  visibility visible  

vendors = official
@keyframes fade-in {
  0% { 
    opacity: 0; 
  }
  100% {
    opacity: 1; 
  }  
}  