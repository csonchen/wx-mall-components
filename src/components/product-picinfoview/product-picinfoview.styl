@import "../../styles/flex.styl";
@import "../../styles/normal.styl";

.product-picinfoview
  background #ffffff
  padding 10px

.product-image
  position relative

.pro-image
  width 70px
  height 70px
  background #f6f6f6
  border-radius 5px
  display block

.bottom-mask
  position absolute
  width 100%
  height 14px  
  line-height 14px
  bottom 0
  text-align center
  border-radius 0 0 5px 5px
  &.yellow
    background #FEA54C
  &.red
    background #FF2332  

.pro-name
  height 40px  