view.page
  - var title = "product-picinfoview"
  - var desc = "商品库商品信息视图"
  include ../../templates/pageHead.pug

  view.page__bd.page__bd_spacing
    view.mb15.bold product-picinfoview
    product-picinfoview(
      productPrimaryImage="{{infoView.productPrimaryImage}}"
      productName="{{infoView.productName}}"
      shopName="{{infoView.shopName}}"
      marketable="{{infoView.marketable}}"
      totalStock="{{infoView.infoView}}"
    )

    view.mb15.bold.mt20 product-picinfocard
    product-picinfocard(
      product="{{product}}"
    )