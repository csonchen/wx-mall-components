/* 三角形 */
.triangle-top
  display inline-block
  width 0
  height 0
  border-left 4px solid transparent
  border-right 4px solid transparent 
  border-bottom 5px solid #999

.triangle-bottom
  display inline-block
  width 0
  height 0
  border-left 4px solid transparent
  border-right 4px solid transparent
  border-top 5px solid #999