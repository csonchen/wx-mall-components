.page
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow-y auto
  -webkit-overflow-scrolling touch
  box-sizing border-box
  opacity 1   
  z-index 1

/* layout */
.container
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden

.page__hd 
  padding 40px

.page__bd

.page__bd_spacing
  padding 0 16px

.page__ft
  padding-top 40px
  padding-bottom 10px
  text-align center
  image 
    height 19px
  &.j_bottom
    position absolute
    bottom 0
    left 0
    right 0

.page__title
  text-align left
  color cr-black
  font-size 20px
  font-weight 400
  margin-bottom 10px

.page__desc
  margin-top 4px
  text-align left
  color cr-gray
  font-size 14px 


/* widget */
$liViewPadding = 20px

.page-icon
  width 21px
  height 21px

.page__li
  margin 8px 0
  position relative

.li__view
  background-color #ffffff
  overflow hidden
  border-radius 2px
  cursor pointer  
  .li-container
    padding $liViewPadding
  &:active
    color cr-gray
    background #eee

.subli-container 
  // border-top 1rpx solid #eee
  overflow hidden
  position relative
  max-height 0
  transition max-height 0.2s ease-out
  &.show
    max-height 500px
    transition max-height 0.25s ease-in  

.subli__view
  background-color #fff
  overflow hidden
  color cr-gray
  // margin-top -7px
  .li-container
    padding $liViewPadding   

.arr-icon 
  width 14px
  height 14px    

/* common */
.bold
  font-weight bold  